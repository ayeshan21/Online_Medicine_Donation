@{
	ViewData["Title"] = "Login form";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<form class="login-form">
   <div class="p-4 bg-light border border-dark rounded-3 shadow-lg">
	    <div class="login-icon">
			<img src="~/images/login-img.png" alt="image not found" />
		</div>
		<h1 class="mb-3 text-center">Login</h1>
		<div class="mb-3 form-group">
			<label class="form-label">Email</label><br />
			<i class="fa-solid fa-envelope"></i>
			<input type="email" class="form-control ps-5" id="email" placeholder="name@gmail.com">
		</div>
		<div class="mb-4 form-group">
			<label class="form-label">Password</label><br />
			<i class="fa-solid fa-lock"></i>
			<input type="password" class="form-control ps-5" id="password" placeholder="Type password" />
		</div>
		<select class="form-select mb-4 text-muted">
			<option selected>--Select role--</option>
			<option>Admin</option>
			<option>NGO</option>
			<option>Doner</option>
		</select>
		<div class="form-check mb-4 d-flex align-items-center">
			<input class="form-check-input me-2" type="checkbox" id="flexCheckDefault">
			<label class="form-check-label me-auto" for="flexCheckDefault">
				Remember me
			</label>
			<a href="">Forget password?</a>
		</div>
		<button type="button" class="form-control bg-success rounded-pill mb-4">Login</button>
		<div class="text-center">
			New User? <a asp-controller="NGORegistration" asp-action="Index">NGO</a> or <a asp-controller="UserRegistration" asp-action="Index">Donor</a><a></a>
		</div>
   </div>
</form>

 